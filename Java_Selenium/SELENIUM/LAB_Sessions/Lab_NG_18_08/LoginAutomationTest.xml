<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Login Suite">

    <!-- Full Suite Run -->
    <test name="Login Automation Test">
        <parameter name="validUser" value="student"/>
        <parameter name="validPass" value="Password123"/>
        <parameter name="invalidUser" value="wrongUser"/>
        <parameter name="invalidPass" value="wrongPass"/>

        <classes>
            <class name="Labs_NG_18_08.LoginAutomationTest"/>
        </classes>
    </test>

    <!-- Run only Sanity tests -->
    <test name="Sanity Only">
        <groups>
            <run>
                <include name="Sanity"/>
            </run>
        </groups>
        <classes>
            <class name="Labs_NG_18_08.LoginAutomationTest"/>
        </classes>
    </test>

    <!-- Run only Regression tests -->
    <test name="Regression Only">
        <groups>
            <run>
                <include name="Regression"/>
            </run>
        </groups>
        <classes>
            <class name="Labs_NG_18_08.LoginAutomationTest"/>
        </classes>
    </test>
</suite>
