<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Hotel Booking Suite" verbose="1" parallel="false">

    <!-- Define parameters globally (can override inside <test> if needed) -->
    <parameter name="url" value="https://www.phptravels.net/"/>
    <parameter name="destination" value="Dubai"/>
    <parameter name="checkinDate" value="22"/>
    <parameter name="checkoutDate" value="25"/>
    <parameter name="addChild" value="yes"/>
    <parameter name="firstname" value="John"/>
    <parameter name="lastname" value="Doe"/>
    <parameter name="email" value="john.doe@example.com"/>
    <parameter name="phone" value="9876543210"/>
    <parameter name="address" value="123 Test Street, Test City"/>
    <parameter name="skipBooking" value="no"/> <!-- set "yes" to skip confirmBooking test -->

    <test name="Hotel Booking Flow Test">
        <classes>
            <class name="Labs_NG_18_08.HotelBookingFlowTest"/>
        </classes>
    </test>

</suite>
